# GIVC Healthcare Platform - Environment Configuration
# Copy this file to .env.local and configure your values

# Application
VITE_APP_NAME="GIVC Healthcare Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# API Configuration
VITE_API_BASE_URL="http://localhost:8787/api/v1"
VITE_API_TIMEOUT=30000

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
VITE_CLOUDFLARE_ACCOUNT_ID=""
VITE_CLOUDFLARE_ZONE_ID=""

# Security & Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# Database & Storage
R2_BUCKET_NAME=givc-medical-data
KV_NAMESPACE_MEDICAL=givc_medical_metadata
KV_NAMESPACE_AUDIT=givc_audit_logs
D1_DATABASE_NAME=givc_healthcare_db

# Authentication
VITE_JWT_EXPIRY_HOURS=24
VITE_SESSION_TIMEOUT_MINUTES=30

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Medical Compliance
HIPAA_COMPLIANCE_LEVEL=strict
RCM_ACCREDITATION=enabled
VITE_HIPAA_COMPLIANCE_LEVEL="strict"
VITE_RCM_ACCREDITATION="enabled"
VITE_AUDIT_LOGGING="enabled"

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=100
VITE_ALLOWED_FILE_TYPES="image/*,application/pdf,application/dicom"

# Security
VITE_CSP_ENABLED=true
VITE_ENCRYPTION_ENABLED=true

# Application Legacy (keeping for backward compatibility)
REACT_APP_BRAND=GIVC
REACT_APP_DOMAIN=givc.thefadil.site
REACT_APP_API_URL=https://givc.thefadil.site/api

# Environment
NODE_ENV=development

# Development Tools
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false

# ============================================================================
# Additional Production Configurations
# ============================================================================

# ----------------------------------------------------------------------------
# NPHIES Integration (Saudi Arabia Health Insurance Exchange)
# ----------------------------------------------------------------------------
NPHIES_BASE_URL=https://api.nphies.sa
NPHIES_CLIENT_ID=your_nphies_client_id
NPHIES_CLIENT_SECRET=your_nphies_client_secret
NPHIES_TENANT_ID=your_tenant_id
NPHIES_API_VERSION=v1

# NPHIES Endpoints
NPHIES_TOKEN_URL=https://auth.nphies.sa/oauth2/token
NPHIES_CLAIM_SUBMISSION_URL=https://api.nphies.sa/claims
NPHIES_ELIGIBILITY_URL=https://api.nphies.sa/eligibility
NPHIES_AUTHORIZATION_URL=https://api.nphies.sa/authorization

# ----------------------------------------------------------------------------
# Medical AI Agents
# ----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# AI Model Configuration
AI_MODEL_PRIMARY=gpt-4-turbo
AI_MODEL_FALLBACK=gpt-3.5-turbo
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# ----------------------------------------------------------------------------
# Monitoring & Analytics
# ----------------------------------------------------------------------------
WORKERS_ANALYTICS_DATASET_ID=your_analytics_dataset_id
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key

# Monitoring Webhooks
MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook
ALERT_WEBHOOK_URL=https://your-alert-service.com/webhook

# ----------------------------------------------------------------------------
# Communication Services
# ----------------------------------------------------------------------------
# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_key
EMAIL_FROM=noreply@givc-platform.com
ADMIN_EMAIL=admin@givc-platform.com

# SMS Service (Twilio - for 2FA)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------------------------------------------
# Extended Security Configuration
# ----------------------------------------------------------------------------
MASTER_KEY=your_master_encryption_key
SESSION_SECRET=your_session_secret
CSP_REPORT_URI=https://your-domain.com/api/csp-report
HSTS_MAX_AGE=31536000

# ----------------------------------------------------------------------------
# Workers Configuration
# ----------------------------------------------------------------------------
# KV Namespaces (IDs)
KV_NAMESPACE_ID=your_kv_namespace_id
KV_SESSION_NAMESPACE_ID=your_session_kv_id
KV_CACHE_NAMESPACE_ID=your_cache_kv_id

# Durable Objects (IDs)
DO_ENCRYPTION_ID=your_encryption_do_id
DO_RATE_LIMITER_ID=your_rate_limiter_do_id

# D1 Database (ID)
D1_DATABASE_ID=your_d1_database_id

# ----------------------------------------------------------------------------
# API & CORS Configuration
# ----------------------------------------------------------------------------
ALLOWED_ORIGINS=https://givc-platform.com,https://app.givc-platform.com
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# ----------------------------------------------------------------------------
# Logging & Audit Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false
AUDIT_LOG_RETENTION_DAYS=2555
SECURITY_LOG_RETENTION_DAYS=3650

# ----------------------------------------------------------------------------
# Frontend Extended Configuration
# ----------------------------------------------------------------------------
VITE_WS_URL=wss://api.givc-platform.com
VITE_CDN_URL=https://cdn.givc-platform.com
VITE_UPLOAD_MAX_SIZE=10485760

# Feature Flags (Extended)
VITE_ENABLE_AI_TRIAGE=true
VITE_ENABLE_MEDIVAULT=true
VITE_ENABLE_CUSTOMER_SUPPORT=true

# ----------------------------------------------------------------------------
# Testing Configuration
# ----------------------------------------------------------------------------
TEST_DATABASE_URL=test.db
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=test_password_123

# ----------------------------------------------------------------------------
# Backup & Disaster Recovery
# ----------------------------------------------------------------------------
BACKUP_BUCKET_NAME=givc-backups
BACKUP_REGION=us-east-1
BACKUP_RETENTION_DAYS=90

# ----------------------------------------------------------------------------
# Compliance & Regulatory (Extended)
# ----------------------------------------------------------------------------
DATA_RESIDENCY=SA
REGULATORY_REGION=GCC
AUDIT_TRAIL_ENABLED=true

# ============================================================================
# Notes:
# - Replace all placeholder values with actual credentials
# - Use strong, unique keys for production (minimum 32 characters)
# - Rotate secrets regularly (90 days recommended)
# - Never expose production credentials in logs or error messages
# - Keep this file updated when adding new environment variables
# - For production: Copy to .env and secure with proper permissions
# ============================================================================