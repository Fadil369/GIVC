# GIVC Healthcare Platform - Environment Configuration
# Copy this file to .env.local and configure your values

# Application
VITE_APP_NAME="GIVC Healthcare Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# API Configuration
VITE_API_BASE_URL="http://localhost:8787/api/v1"
VITE_API_TIMEOUT=30000

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
VITE_CLOUDFLARE_ACCOUNT_ID=""
VITE_CLOUDFLARE_ZONE_ID=""

# Security & Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# Database & Storage
R2_BUCKET_NAME=givc-medical-data
KV_NAMESPACE_MEDICAL=givc_medical_metadata
KV_NAMESPACE_AUDIT=givc_audit_logs
D1_DATABASE_NAME=givc_healthcare_db

# Authentication
VITE_JWT_EXPIRY_HOURS=24
VITE_SESSION_TIMEOUT_MINUTES=30

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Medical Compliance
HIPAA_COMPLIANCE_LEVEL=strict
RCM_ACCREDITATION=enabled
VITE_HIPAA_COMPLIANCE_LEVEL="strict"
VITE_RCM_ACCREDITATION="enabled"
VITE_AUDIT_LOGGING="enabled"

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=100
VITE_ALLOWED_FILE_TYPES="image/*,application/pdf,application/dicom"

# Security
VITE_CSP_ENABLED=true
VITE_ENCRYPTION_ENABLED=true

# Application Legacy (keeping for backward compatibility)
REACT_APP_BRAND=GIVC
REACT_APP_DOMAIN=givc.thefadil.site
REACT_APP_API_URL=https://givc.thefadil.site/api

# Environment
NODE_ENV=development

# Development Tools
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false