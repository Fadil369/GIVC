# NPHIES API Configuration
NPHIES_BASE_URL=https://NPHIES.sa/api/fs/fhir
NPHIES_SANDBOX_URL=https://HSB.nphies.sa/api/fs/fhir
NPHIES_MESSAGE_ENDPOINT=$process-message

# Organization Credentials
NPHIES_LICENSE=7000911508
NPHIES_ORGANIZATION_ID=10000000000988
NPHIES_PROVIDER_ID=1048
NPHIES_PAYER_ID=7000911508

# Provider Details
PROVIDER_NAME=Al Hayat National Hospital
PROVIDER_CHI_ID=1048
INSURANCE_GROUP_CODE=1096

# Certificate Paths (for production)
CERT_FILE_PATH=./certs/client_certificate.pem
CERT_KEY_PATH=./certs/private_key.pem
CA_BUNDLE_PATH=./certs/ca_bundle.pem

# Environment Settings
ENVIRONMENT=sandbox  # sandbox or production
LOG_LEVEL=INFO
LOG_FILE=logs/nphies_integration.log

# API Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2

# Data Pipeline Settings
BATCH_SIZE=100
ENABLE_ASYNC=true
PARALLEL_WORKERS=5

# Database Configuration (Optional)
DATABASE_URL=sqlite:///nphies_data.db
# DATABASE_URL=postgresql://user:password@localhost:5432/nphies_db

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
